<%= form_with(model: [@place, @activity], local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :date_posted %>
    <%= form.date_field :date_posted %>
  </div>

  <%= form.submit %>
<% end %>